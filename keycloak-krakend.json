{
  "version": 3,
  "timeout": "3s",
  "endpoints": [
    {
      "endpoint": "/",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "extra_config": {
            "plugin/http-client": {
              "name": "no-redirect"
            }
          },
          "encoding": "no-op",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://nrdb_api_server:3000"
          ]
        }
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/assets/apitome/{resource}",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/assets/apitome/{resource}",
          "encoding": "no-op",
          "sd": "static"
        }
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/assets/apitome/highlight_themes/{theme}",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/assets/apitome/highlight_themes/{theme}",
          "encoding": "no-op",
          "sd": "static"
        }
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/api/docs",
      "output_encoding": "no-op",
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/api/docs",
          "encoding": "no-op",
          "sd": "static"
        }
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/api/v3/public/factions",
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/api/v3/public/factions"
        }
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "client_max_rate": 5,
          "strategy": "ip"
        }
      },
      "input_query_strings": [
        "fields",
        "filter",
        "include",
        "page",
        "search",
        "sort"
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/api/v3/public/factions/{id}",
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/api/v3/public/factions/{id}"
        }
      ],
      "input_query_strings": [
        "fields",
        "filter",
        "include",
        "page",
        "search",
        "sort"
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/api/v3/public/factions/{id}/{relationship}",
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/api/v3/public/factions/{id}/{relationship}"
        }
      ],
      "input_query_strings": [
        "fields",
        "filter",
        "include",
        "page",
        "search",
        "sort"
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/api/v3/public/factions/{id}/relationships/{relationship}",
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/api/v3/public/factions/{id}/relationships/{relationship}"
        }
      ],
      "input_query_strings": [
        "fields",
        "filter",
        "include",
        "page",
        "search",
        "sort"
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/api/v3/private/user",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/nullsignal/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "host": [
            "http://nrdb_api_server:3000"
          ],
          "url_pattern": "/api/v3/private/user"
        }
      ],
      "input_headers": [
        "Authorization"
      ]
    },
    {
      "endpoint": "/keycloak-protected",
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/nullsignal/protocol/openid-connect/certs",
          "disable_jwk_security": true
        }
      },
      "backend": [
        {
          "host": [
            "http://krakend:8080"
          ],
          "url_pattern": "/__health"
        }
      ],
      "input_headers": [
        "Authorization"
      ]
    }
  ],
  "output_encoding": "json"
}
